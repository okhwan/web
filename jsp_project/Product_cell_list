   <% 
      String c_id = request.getParameter("s_id");   
      Statement sm = conn.createStatement();
      ResultSet rs = sm.executeQuery("SELECT * FROM celler where id=\"" + c_id + "\"");
      
      String str = "";
      int count = 1;
      
      while(rs.next()){
            str += "<tr>" + "<td align = 'center'>"+ count + "</td>" +"<td>" + rs.getString("id") + "</td>" + "<td>" + rs.getString("passwd") + "</td>" + "<td>" +  rs.getString("email")
               + "</td>" + "<td>" + rs.getString("name") + "</td>" + "</tr>";
            count++;
         } 
        out.print("<tr> <td>번호</td> <td>아이디</td>  <td>비밀번호</td> <td>이메일</td> <td>이름</td></tr>");
        out.print(str);
        out.print(c_id);
    
      rs.close();
      sm.close();
      conn.close();   
   %>
